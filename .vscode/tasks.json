{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Code in Docker Container",
            "type": "shell",
            "command": "docker",
            "args": [
                "exec",
                "-it",
                "laughing_moser",
                "/bin/bash",
                "-c",
                "make -s -C /shared/nginx-proxy -f Makefile clean;  make -s -C /shared/nginx-proxy -f Makefile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run Docker Web Proxy Program",
            "type": "shell",
            "command": "docker",
            "args": [
                "exec",
                "laughing_moser",
                "/bin/bash",
                "-c",
                "cd /shared/nginx-proxy && ./webproxy"
            ],
            "group": "test",
            "problemMatcher": []
        }
    ]
}